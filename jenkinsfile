pipeline {
    agent any

    stages {
        stage("Build Imagens") {
            steps {
                script {
                    dockerapp = docker.build("fabricioveronez/api-produto:${env.BUILD_ID}", "-f ./src/dockerfile ./src")
                }
            }
        }
        stage("Push Image") {
            steps{
                script{
                    docker.withRegistry("https://registry.hub.docker.com","dockerhub")
                    dockerapp.push("latest")
                    dockerapp.push("${env.BUILD_ID}")
                }
            }

        }
    }
}
